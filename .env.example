# Fontana Car Accident Lawyer - Environment Variables
# Copy this to .env and fill in your values

# ========================================
# BLOG AUTOMATION SYSTEM (NEW)
# ========================================
# Get Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# Generate a secure random string for cron job authentication
# Use: openssl rand -base64 32
CRON_SECRET=your_secure_random_string_for_cron_authentication

# ========================================
# VERCEL DEPLOYMENT
# ========================================
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# ========================================
# GITHUB INTEGRATION
# ========================================
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username
GITHUB_REPO_NAME=fontana-car-accident-lawyer

# ========================================
# WEBHOOK URLS (EXISTING SYSTEM)
# ========================================
WEBHOOK_STEP1_URL=https://your-deployment.vercel.app/api/webhooks/step1
WEBHOOK_STEP2_URL=https://your-deployment.vercel.app/api/webhooks/step2

# External N8N webhook for lead processing
EXTERNAL_WEBHOOK_URL=https://n8n-dtla-c914de1950b9.herokuapp.com/webhook/12b6de6e-7897-4348-94e5-179ab56c89e2

# ========================================
# OPTIONAL: NOTIFICATIONS
# ========================================
NOTIFICATION_EMAIL=legal-team@yourfirm.com
TWILIO_SID=your_twilio_sid_for_sms
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Optional: SMTP for email notifications when blogs are generated
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# ========================================
# PRODUCTION SETTINGS
# ========================================
NODE_ENV=production
VERCEL_URL=https://car-accident-lawyer-fontana.vercel.app