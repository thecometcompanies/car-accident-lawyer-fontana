{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "api/webhooks/step1.js": {
      "maxDuration": 10
    },
    "api/webhooks/step2.js": {
      "maxDuration": 10
    },
    "api/cron/daily-blog.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-blog",
      "schedule": "0 5 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/intake-step1",
      "destination": "/api/webhooks/step1"
    },
    {
      "source": "/api/intake-step2", 
      "destination": "/api/webhooks/step2"
    }
  ]
}